primero = input('ingresa primer numero: ')
try:
    primero = int(primero)
except:# Nos permite ejecutar la logica de letra a numero.
    primero = 'chanchito feliz'

if primero =='chanchito feliz':
    print('el valor ingresado no es un entero')
    exit()

segundo = input('ingreso segundo numero: ')
try:
    segundo = int(segundo)
except:
    segundo = 'chanchito feliz'

if segundo == 'chanchito feliz':
    print('el valor ingresado no es un entero')
    exit()
simbolo = input('ingrese operacion: ')
if simbolo =='+':
    print('suma:',primero+segundo)
elif simbolo =='-':
    print('resta:',primero-segundo)
elif simbolo =='*':
    print('multiplicacion:',primero*segundo)
elif simbolo =='/':
    print('division:',primero/segundo)
else:
    print('el simbolo ingresado no es valido')
